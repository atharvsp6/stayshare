<style>
  .btn-search {
    background-color: #fe424d;
    color: white;
    border: 1px solid #ced4da;
    border-radius: 1.5rem;
    padding: 0 1rem 0 1rem;
  }

  .btn-search:hover {
    background-color: #ff385c;
    color: white;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.25rem;
  }

  @media (max-width: 768px) {
    .navbar-nav {
      text-align: center;
    }

    .navbar .form-control {
      width: 100%;
      margin-bottom: 0.5rem;
      padding: 0.5rem 1rem;
    }

    .btn-search {
      width: 100%;
      margin-top: 0.5rem;
    }

    .navbar-nav.ms-auto {
      margin-left: 0 !important;
    }
  }

  /* Add margin below navbar to prevent overlap */
  .navbar {
    margin-bottom: 1.5rem;
    z-index: 1020;
  }

  /* Make collapsed navbar links stack vertically on mobile */
  @media (max-width: 768px) {
    .navbar-collapse {
      background: #fff;
      padding: 1rem 0;
      box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    }
    .navbar-nav {
      flex-direction: column !important;
      align-items: stretch !important;
    }
    .navbar-nav .nav-link {
      padding: 0.75rem 1rem;
      font-size: 1.1rem;
    }
    .navbar-brand {
      font-size: 1.3rem;
    }
  }
</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i> StayShare</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link" href="/listings">Explore</a>
      </div>
      <div class="navbar-nav ms-auto">
        <form class="d-flex flex-column flex-md-row w-100" role="search">
          <input class="form-control me-md-2 mb-2 mb-md-0" type="search" placeholder="Search destinations" aria-label="Search" style="border-radius: 25px;"/>
          <button class="btn btn-search" type="submit">
            <i class="fa-solid fa-magnifying-glass"></i>Search
          </button>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Airbnb your home</a>
        <% if(!currUser){ %>
          <a class="nav-link" href="/signup"><b>Sign Up</b></a>
          <a class="nav-link" href="/login"><b>Login</b></a>
        <% } %>
        <% if(currUser){ %>
          <a class="nav-link" href="/logout">Logout</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>