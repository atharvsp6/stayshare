<% layout('layouts/boilerplate') -%>

    <body class="bg-light">
        <div class="container py-5">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">

                    <div class="card shadow-sm border-0 rounded-4 p-4">
                        <h2 class="text-center mb-4 fw-semibold">Edit Listing</h2>

                        <form method="POST" action="/listings/<%= listing._id %>?_method=PUT" class="needs-validation" enctype="multipart/form-data"  novalidate>

                            <div class="mb-3">
                                <label for="title" class="form-label">Title</label>
                                <input type="text" class="form-control" name="listing[title]" id="title" required
                                    value="<%= listing.title %>">
                            </div>

                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea name="listing[description]" class="form-control" rows="3"
                                    required> <%= listing.description %></textarea>
                            </div>

                            <div class="mb-3">
                                Original Lisitng Image <br>
                                <img src="<%= originalImageUrl %>" alt="orig img" 
                                    class="img-fluid rounded mb-3" style="max-height: 300px; max-width: 100%;">
                            </div>

                            <div class="mb-3">
                                <input type="file" name="listing[image]" class="form-control" id="imageInput" placeholder="upload new image">
                                
                            </div>

                            <div class="row">
                                <div class="mb-3 col-md-4">
                                    <label for="price" class="form-label">Price (â‚¹)</label>
                                    <input type="number" name="listing[price]" class="form-control" id="price" required
                                        value="<%= listing.price %>">
                                </div>

                                <div class="mb-3 col-md-8">
                                    <label for="country" class="form-label">Country</label>
                                    <input type="text" name="listing[country]" class="form-control" id="country"
                                        required value="<%= listing.country %>">
                                </div>
                            </div>

                            <div class="mb-3">
                                <label for="location" class="form-label">Location</label>
                                <input type="text" name="listing[location]" class="form-control" id="location" required
                                    value="<%= listing.location %>">
                            </div>

                            <div class="d-grid mt-4">
                                <button class="btn btn-dark rounded-pill py-2 fs-5" type="submit">
                                    <i class="bi bi-save me-2"></i>Save Changes
                                </button>
                            </div>

                        </form>
                    </div>

                </div>
            </div>
        </div>
    
    </body>